<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<definition name="DefaultTemplate" template="/WEB-INF/page/defaultview/defaultLayout.jsp">
		<put-attribute name="title" value="index" />
		<put-attribute name="header" value="/WEB-INF/page/defaultview/defaultHeader.jsp" />
		<put-attribute name="content" value="/WEB-INF/page/defaultview/blank.jsp" />
		<put-attribute name="footer" value="/WEB-INF/page/defaultview/defaultFooter.jsp" />

		<!-- CSS -->
		<put-list-attribute name="stylesList" cascade="true">
			<add-attribute value="/resources/styles/bootstrap.css" />
			<add-attribute value="/resources/styles/bootstrap-table.css" />
			<add-attribute value="/resources/styles/site-master.css" />
			<add-attribute value="/resources/styles/bootstrap-ext-charaPageTable.css" />
			<add-attribute value="/resources/styles/bootstrap-ext-languageNavtab.css" />
			<add-attribute value="/resources/styles/bootstrap-ext-leftNavtab.css" />
		</put-list-attribute>

		<!-- Script -->
		<put-list-attribute name="scriptsList" cascade="true">
			<add-attribute value="/resources/javascript/jquery.min.js" />
			<add-attribute value="/resources/javascript/bootstrap.min.js" />
			<add-attribute value="/resources/javascript/bootstrap-table.js" />
			<add-attribute value="/resources/javascript/site.js" />
		</put-list-attribute>
	</definition>
</tiles-definitions>